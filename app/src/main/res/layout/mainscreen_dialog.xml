<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:id="@+id/song_title"
            android:orientation="vertical">
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="start"
                android:text="I don&apos;t want to spoil the party met nog langere naam"
                android:layout_margin="0dp"
                android:ellipsize="end" android:lines="2"
                android:id="@+id/mainscreentitle_top"
                android:textSize="20dp" />
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Beatles-Revolver langer"

                android:layout_margin="0dp"
                android:id="@+id/mainscreenartist_top"
                android:ellipsize="end" android:lines="2"
                android:layout_gravity="left"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:padding="0dp"

            android:orientation="horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:id="@+id/mainscreentime_layout"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="0.40"
            android:orientation="vertical"
            android:paddingTop="40dp">
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:text="04:30"
                android:padding="0dp"

                android:layout_margin="4dp"
                android:id="@+id/mainscreentime_top"
                android:lines="1"
                android:layout_gravity="end"
                android:textSize="40dp" />
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:padding="0dp"
                android:text="04:30"

                android:layout_margin="4dp"
                android:id="@+id/mainscreentotaltime_top"
                android:lines="1"
                android:layout_gravity="end"
                android:textSize="40dp" />
        </LinearLayout>
        <!-- Right button -->

        <ImageView
            android:padding="0dp"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:text="ab"
            android:layout_weight="0.60"
            android:layout_alignParentTop="true"
            android:id="@+id/mainscreenthumbnail_top"
            android:src="@drawable/pause"
            android:layout_gravity="top" />
        <!--android:scaleType="centerInside"-->
    </LinearLayout>
    </LinearLayout>
</LinearLayout>