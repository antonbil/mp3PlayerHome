<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    tools:showIn="@layout/activity_main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.60"
        android:padding="0dp"
        android:id="@+id/song_title"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:text="I don&apos;t want to spoil the party met nog langere naam"
            android:layout_margin="0dp"
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/title_top"
            android:textSize="20dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Beatles-Revolver langer"

            android:layout_margin="0dp"
            android:id="@+id/artist_top"
            android:ellipsize="end"
            android:lines="1"
            android:layout_gravity="left"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="70dp"
        android:id="@+id/time_layout"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="04:30"
            android:padding="0dp"

            android:layout_margin="4dp"
            android:id="@+id/time_top"
            android:ellipsize="end"
            android:lines="1"
            android:layout_gravity="end"
            android:textSize="15dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="0dp"
            android:text="04:30"

            android:layout_margin="4dp"
            android:id="@+id/totaltime_top"
            android:ellipsize="end"
            android:lines="1"
            android:layout_gravity="end"
            android:textSize="15dp" />
    </LinearLayout>
    <!-- Right button -->

    <ImageView
        android:padding="0dp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="ab"
        android:gravity="right"
        android:scaleType="centerInside"
        android:layout_weight="0.30"
        android:id="@+id/thumbnail_top"
        android:layout_gravity="center"
        android:src="@drawable/pause" />
    <!--android:scaleType="centerInside"-->
</LinearLayout>

    